<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    Picture is just a placeholder will try to replace with actual item pic-->
    <ImageView
        android:id="@+id/alert_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/quest" />

    <TextView
        android:id="@+id/alert_itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/alert_picture"
        android:text="Item Name"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/alert_itemBin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alert_itemName"
        android:layout_toRightOf="@+id/alert_picture"
        android:text="Item Name"
        android:textSize="20sp" />

    <Button
        android:id="@+id/alert_close_btn"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@id/alert_picture"
        android:layout_centerInParent="true"
        android:text="Close" />

</RelativeLayout>